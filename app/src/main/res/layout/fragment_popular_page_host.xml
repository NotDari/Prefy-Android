<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Popular.PopularPageHostFragment"
    android:background="@color/fragment_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PopularHostTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="PREFY"
            android:textColor="@color/text_color"
            android:textSize="35sp"
            android:fontFamily="@font/myra4f_caps_regular"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/PopularHostActivityLeftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/PopularHostActivityRightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/PopularHostNewActivityText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"
            app:layout_constraintDimensionRatio="1:1"
            android:text="0"
            android:gravity="center"
            android:background="@drawable/textview_circle_activity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/PopularHostActivityLeftGuideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/PopularHostActivityRightGuideline"
            android:elevation="10dp"/>
        <ImageButton
            android:id="@+id/PopularHostSearchButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_baseline_search_24"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/PopularHostSearchLeftGuideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/text_color"
            app:layout_constraintEnd_toEndOf="@id/PopularHostSearchRightGuideline"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/PopularHostSearchLeftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/PopularHostSearchRightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/PopularHostTitleLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/PopularHostPopularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/PopularHostTitleLeftGuideline"
        app:layout_constraintTop_toBottomOf="@id/PopularHostTopBar"
        android:textSize="25sp"
        android:text="POPULAR"
        android:textColor="@color/text_color"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/PopularHostFakeToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/toast_background"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toBottomOf="@id/PopularHostPopularText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_downward_24"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="New Posts"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/PopularHostFragmentNoMoreLay"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/PopularHostPopularText"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/PopularHostFragmentNoMoreImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/prefyselectgrey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/PopularHostFragmentNoMoreImage"
            app:layout_constraintEnd_toEndOf="@id/PopularHostFragmentNoMoreImage"
            app:layout_constraintTop_toBottomOf="@id/PopularHostFragmentNoMoreImage"
            android:textColor="@color/grey"
            android:gravity="center"
            android:text="There are no more posts,\n please wait for more"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/PopularPageHostSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/PopularHostPopularText"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.daribear.prefy.Popular.CustomViewPager.PopularPager
            android:id="@+id/PopularDariPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/PopularNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:lines="2"
        android:text="@string/error_string"
        android:textColor="@color/grey"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/PopularPageProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/text_color"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>