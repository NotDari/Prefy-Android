<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popdialog"
    android:backgroundTint="@color/white"
    android:id="@+id/PostDiaFullLay"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:id="@+id/CommentDialogReplyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingEnd="40dp">

        <ImageView
            android:id="@+id/CommentDialogReplyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reply" />

        <TextView
            android:id="@+id/CommentDialogReplyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/CommentDialogReplyImage"
            android:autoSizeTextType="uniform"
            android:text="Reply"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:id="@+id/CommentDialogProfileLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:paddingEnd="40dp">


        <ImageView
            android:id="@+id/CommentDialogProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/report" />

        <TextView
            android:id="@+id/PostDialogProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/CommentDialogProfileImage"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:id="@+id/CommentDialogReportLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:paddingEnd="40dp">
        <ImageView
            android:id="@+id/CommentDialogReportImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/CommentDialogReportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/CommentDialogReportImage"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text="Report"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:id="@+id/CommentDialogDeleteView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:id="@+id/CommentDialogDeleteLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:paddingEnd="40dp">

        <ImageView
            android:id="@+id/CommentDialogDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/report" />

        <TextView
            android:id="@+id/CommentDialogDeleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/CommentDialogDeleteImage"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>