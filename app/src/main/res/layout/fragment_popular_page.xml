<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Popular.PopularPageFragment"
    android:background="@color/fragment_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PopularItemTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/PopularItemUserImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <TextView
            android:id="@+id/PopularItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/PopularItemUserImage"
            app:layout_constraintTop_toTopOf="parent"
            android:text="username"
            android:textColor="@color/text_color"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/PopularItemVerified"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_verified_svg"
            app:layout_constraintStart_toEndOf="@id/PopularItemUsername"
            app:layout_constraintTop_toTopOf="@id/PopularItemUsername"
            app:layout_constraintBottom_toBottomOf="@id/PopularItemUsername"
            app:layout_constraintDimensionRatio="1:1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/PopularItemPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/PopularItemUsername"
            app:layout_constraintStart_toEndOf="@id/PopularItemUserImage"
            android:text="x months ago"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/PopularItemTotalVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="x Votes"
            android:textColor="@color/text_color"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/PopularItemQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Question"
        app:layout_constraintTop_toBottomOf="@id/PopularItemTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="@color/text_color"/>
    <ImageView
        android:id="@+id/PopularItemQuestionImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/PopularItemQuestionText"
        app:layout_constraintBottom_toTopOf="@id/PopularItemBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>
    <View
        android:id="@+id/PopularItemImageCentreDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/PopularItemQuestionImage"
        app:layout_constraintBottom_toBottomOf="@id/PopularItemQuestionImage"
        app:layout_constraintStart_toStartOf="@id/PopularItemQuestionImage"
        app:layout_constraintEnd_toEndOf="@id/PopularItemQuestionImage"
        android:background="@android:color/transparent"/>
    <RelativeLayout
        android:id="@+id/PopularItemImageLeftClicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/PopularItemQuestionImage"
        app:layout_constraintBottom_toBottomOf="@id/PopularItemQuestionImage"
        app:layout_constraintStart_toStartOf="@id/PopularItemQuestionImage"
        app:layout_constraintEnd_toEndOf="@id/PopularItemImageCentreDivider"
        android:background="@android:color/transparent">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/PopularItemImageLeftClickerText"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true">

            <com.daribear.prefy.Votes.VoteCircleShape
                android:id="@+id/PopularItemImageLeftClickerProgressCircle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/PopularItemImageLeftClickerVoteMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vote_mark"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>



        <View
            android:id="@+id/PopularItemImageLeftClickerBar"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/PopularItemImageLeftClickerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/PopularItemImageLeftClickerBar"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/PopularItemImageRightClicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/PopularItemQuestionImage"
        app:layout_constraintBottom_toBottomOf="@id/PopularItemQuestionImage"
        app:layout_constraintStart_toStartOf="@id/PopularItemImageCentreDivider"
        app:layout_constraintEnd_toEndOf="@id/PopularItemQuestionImage"
        android:background="@android:color/transparent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/PopularItemImageRightClickerText"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true">

            <com.daribear.prefy.Votes.VoteCircleShape
                android:id="@+id/PopularItemImageRightClickerProgressCircle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/PopularItemImageRightClickerVoteMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vote_mark"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>



        <View
            android:id="@+id/PopularItemImageRightClickerBar"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/PopularItemImageRightClickerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/PopularItemImageRightClickerBar"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PopularItemBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/PopularItemCommentsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/comments9"
            android:textColor="@color/text_color"
            android:text="10"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:backgroundTint="@color/text_color"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/PopularItemCommentsButton"
            android:text="Comments"
            android:textColor="@color/text_color"
            android:layout_marginStart="5dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/PopularItemOptionsButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/more"
            android:background="@android:color/transparent"
            app:tint="@color/text_color"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>