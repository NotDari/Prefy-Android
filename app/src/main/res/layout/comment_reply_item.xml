<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CommentReplyItemConsLay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/CommentReplyItemLeftGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">


        <ImageView
            android:id="@+id/CommentReplyItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/user_photo" />

        <TextView
            android:id="@+id/CommentReplyItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/CommentReplyItemImage"
            app:layout_constraintStart_toEndOf="@id/CommentReplyItemImage"
            android:textColor="@color/text_color"
            android:text="username"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />

        <ImageButton
            android:id="@+id/CommentReplyItemMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/CommentReplyItemUsername"
            app:layout_constraintBottom_toBottomOf="@id/CommentReplyItemTimeSince"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/more"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/CommentReplyItemTimeSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CommentReplyItemUsername"
            app:layout_constraintStart_toStartOf="@id/CommentReplyItemUsername"
            android:textColor="@color/grey"
            android:text="time since"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/CommentReplyItemCommentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CommentReplyItemTimeSince"
            app:layout_constraintStart_toStartOf="@id/CommentReplyItemUsername"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text_color"
            android:text="This is a sample comment"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CommentReplyItemReplyLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintStart_toStartOf="parent" />



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/CommentReplyItemBottomView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CommentReplyItemConsLay"
        app:layout_constraintWidth_percent=".65"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:layout_marginTop="10dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CommentReplyItemLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>