<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">
    <ImageView
        android:id="@+id/ProfilePostListItemImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ProfilePostListVoteCountConsLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/dark_grey_transparentish">
        <ImageView
            android:id="@+id/ProfilePostListItemHeadImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/profile_selector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white_transparentish"/>
        <TextView
            android:id="@+id/ProfilePostListItemLeftVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ProfilePostListItemHeadImage"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white_transparentish"
            android:text="0"/>
        <TextView
            android:id="@+id/ProfilePostListItemRightVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ProfilePostListItemHeadImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white_transparentish"
            android:text="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>