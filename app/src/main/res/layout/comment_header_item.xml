<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/CommentPostImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CommentPosterConsLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CommentPostImageView">

        <ImageView
            android:id="@+id/CommentsPosterProfileImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/CommentProfileImageGuideline"
            android:layout_marginStart="10dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/CommentsPosterProfileImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/CommentsPosterProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/CommentsPosterPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#858585"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/CommentProfileImageGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"  />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/CommentQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:text="Question"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toBottomOf="@id/CommentPosterConsLay"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:maxEms="12"/>

    <View
        android:id="@+id/CommentSeperatorView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F1F1F1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".4"
        app:layout_constraintTop_toBottomOf="@id/CommentQuestionText"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/CommentsNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:text="@string/error_string"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/CommentSeperatorView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:lines="2"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/NoCommentsRelLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CommentSeperatorView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/NoCommentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/NoCommentsImage"
            android:textColor="@color/grey"
            android:text="There are no comments on this post yet"/>

        <ImageView
            android:id="@+id/NoCommentsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/commentsactivity"
            app:tint="@color/grey"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/CommentsLoadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/CommentSeperatorView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        android:indeterminateTint="@color/text_color"/>


</androidx.constraintlayout.widget.ConstraintLayout>