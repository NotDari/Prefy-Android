<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ExploreTopBar"
            android:layout_marginTop="15dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ExploreHostTitleTextLeftGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ExploreTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/ExploreHostTitleTextLeftGuideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/ExploreHostSearchButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_search_24"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/ExploreSearchRightGuideline"
                app:layout_constraintStart_toStartOf="@id/ExploreSearchLeftGuideline"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_color" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ExploreSearchLeftGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ExploreSearchRightGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/ExploreCategoriesTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ExploreTopBar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Categories"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/ExploreCategoriesImageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/ExploreCategoriesTitleText"
            android:layout_marginTop="10dp"
            >

            <FrameLayout
                android:id="@+id/ExploreCategoriesFirstImageLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true">


                <RelativeLayout
                    android:id="@+id/ExploreCategoriesFirstRelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ExploreCategoriesFirstImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shapeAppearanceOverlay="@style/slightlyroundedImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        />
                    <TextView
                        android:id="@+id/ExploreCategoriesFirstText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ExploreCategoriesFirstImage"
                        />

                </RelativeLayout>


            </FrameLayout>
            <FrameLayout
                android:id="@+id/ExploreCategoriesSecondImageLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toEndOf="@id/ExploreCategoriesFirstImageLayout"
                android:layout_toStartOf="@id/ExploreCategoriesThirdImageLayout">


                <RelativeLayout
                    android:id="@+id/ExploreCategoriesSecondRelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ExploreCategoriesSecondImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shapeAppearanceOverlay="@style/slightlyroundedImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        />
                    <TextView
                        android:id="@+id/ExploreCategoriesSecondText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ExploreCategoriesSecondImage"
                        />

                </RelativeLayout>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/ExploreCategoriesThirdImageLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:id="@+id/ExploreCategoriesThirdRelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ExploreCategoriesThirdImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shapeAppearanceOverlay="@style/slightlyroundedImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        />
                    <TextView
                        android:id="@+id/ExploreCategoriesThirdText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ExploreCategoriesThirdImage"
                        />

                </RelativeLayout>


            </FrameLayout>



        </RelativeLayout>

    <TextView
        android:id="@+id/ExploreSponsoredTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ExploreCategoriesImageList"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Sponsored Posts:"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ExploreSponsoredItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ExploreSponsoredTitleText"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage5"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ExploreSponsoredItemsImage7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/ExploreSponsoredItemsImage6"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ExploreSponsoredNoItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey"
                android:text="There are no sponsored posts"
                android:fontFamily="@font/poppins_medium"
                android:visibility="gone"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/ExploreSponsoredItemsLayout"
        android:layout_marginBottom="10dp"
        android:background="@color/explore_bar_colour" />



</RelativeLayout>