<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CommentListItemConsLay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/CommentListItemLeftGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">


        <ImageView
            android:id="@+id/CommentListItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/user_photo" />

        <TextView
            android:id="@+id/CommentListItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/CommentListItemImage"
            app:layout_constraintStart_toEndOf="@id/CommentListItemImage"
            android:textColor="@color/text_color"
            android:text="username"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            />

        <ImageButton
            android:id="@+id/CommentListItemMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/CommentListItemUsername"
            app:layout_constraintBottom_toBottomOf="@id/CommentListItemTimeSince"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/text_color"
            android:src="@drawable/more"
            android:background="@android:color/transparent"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/CommentListItemTimeSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CommentListItemUsername"
            app:layout_constraintStart_toStartOf="@id/CommentListItemUsername"
            android:textColor="@color/grey"
            android:text="time since"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/CommentListItemCommentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CommentListItemTimeSince"
            app:layout_constraintStart_toStartOf="@id/CommentListItemUsername"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text_color"
            android:text="This is a sample comment"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CommentListItemReplyLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/CommentListItemReplyLinLay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CommentListItemConsLay"
        app:layout_constraintStart_toStartOf="@id/CommentListItemReplyLeftGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        >

    </LinearLayout>


    <TextView
        android:id="@+id/CommentListItemBottomView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CommentListItemReplyLinLay"
        app:layout_constraintWidth_percent=".65"
        android:layout_marginEnd="20dp"
        android:background="#F1F1F1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/grey"
        android:gravity="center_horizontal"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CommentListItemLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>